<!DOCTYPE html>
<html lang="en">   
    <script src="/js/scriptAgregarCarrito.js"></script>
<body>
    <header>
        
        <article class="top-bar">
            <a href="/" class="logo"><img src="/img/foto-logo.jpg" alt="logo"></a>
            <form action="/products/search" method="POST">
                <h1>Testing Site</h1>
                <div class="buscador">
                    <input type="search" name="search" placeholder="Search here...">
                    <button class="buscar"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
                <ul class="nav-bar">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li>
                        <a href="/products">Products-List</a>
                    </li>
                    <li>
                        <a href="/rickApi/personajes">Rick y Morthy</a>
                    </li>
                    <% if (locals.isLogged && locals.isLogged.level.type == 'admin') { %>
                        <li>
                            <a href="/products/create">Product-Create</a>
                        </li>
                        <li>
                            <a href="/users">Users</a>
                        </li>
                        <li>
                            <a href="/products/removed">Recover-Product-Removed</a>
                        </li>     
                    <% } %>
                                    
                </ul>
            </form>
            <i class="fa-solid fa-bars"></i>
            <ul class="user-bar">
                <li>
                    <a href="/products/productCart">
                        <i class="fa-solid fa-cart-shopping"></i>
                        <span class="cart-number">0</span>
                    </a>
                </li>
                <% if (locals.isLogged) { %>
                    <div class="dropdown">
                        <img src="/img/users/<%= locals.isLogged.image %>" style="border-radius: 100%;" alt="foto">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                          Hi <%= locals.isLogged.name %> 
                        </button>
                        <ul class="dropdown-menu">
                          <li><a class="dropdown-item" href="/users/profile/<%= locals.isLogged.id %>">Profile</a></li>
                          <li><a class="dropdown-item" href="/users/logout">Logout</a></li>
                        </ul>
                      </div>
                <% } else {%>   
                <li>
                    <a href="/users/login">Login</a>
                </li>
                <li>
                    <a href="/users/register">Register</a>
                </li>
                <% } %>
            </ul>
        </article>    
    </header>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/6cd48854d2.js" crossorigin="anonymous"></script>
</body>
</html>